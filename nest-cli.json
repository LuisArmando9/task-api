{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets":[
      {
        "include": "core/i18n/**/*.json" ,
        "watchAssets": true,
        "outDir": "dist"
      }
    ],
    "watchAssets": true,
    "plugins": ["@nestjs/swagger"]
  }
}
